generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  engineType    = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Connection pool settings for production
  relationMode = "prisma"
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  password  String
  name      String?
  role      Role        @default(ADMIN)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  lastLogin DateTime?
  accounts  Account[]
  articles  Article[]
  sessions  Session[]
  auditLogs AuditLog[]
  templates ArticleTemplate[]

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  articles    Article[]

  @@index([slug])
}

model Article {
  id                 String               @id @default(cuid())
  title              String
  slug               String               @unique
  excerpt            String
  content            String
  imageUrl           String?
  sourceUrl          String?
  status             ArticleStatus        @default(DRAFT)
  views              Int                  @default(0)
  publishedAt        DateTime?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  categoryId         String
  authorId           String?
  agentLogId         String?
  metaTitle          String?
  metaDescription    String?
  keywords           String[]
  indexNowStatus     IndexStatus          @default(PENDING)
  indexedAt          DateTime?
  score              Int                  @default(0)
  seoScore           Int                  @default(0)
  readingTime        Int                  @default(0)
  scheduledPublishAt DateTime?
  templateId         String?
  facebookShared     Boolean              @default(false)
  agentLog           AgentLog?            @relation(fields: [agentLogId], references: [id])
  author             User?                @relation(fields: [authorId], references: [id])
  category           Category             @relation(fields: [categoryId], references: [id])
  template           ArticleTemplate?     @relation(fields: [templateId], references: [id], onDelete: SetNull)
  analytics          ArticleAnalytics[]
  translations       ArticleTranslation[]
  seoRecommendations SEORecommendation[]
  duplicatesAsOriginal  ArticleDuplicate[] @relation("OriginalArticle")
  duplicatesAsDuplicate ArticleDuplicate[] @relation("DuplicateArticle")

  @@index([slug])
  @@index([status, publishedAt])
  @@index([categoryId])
  @@index([publishedAt])
  @@index([indexNowStatus])
  @@index([scheduledPublishAt])
  @@index([templateId])
  @@index([seoScore])
}

// i18n: Article translations for multi-language support
model ArticleTranslation {
  id        String   @id @default(cuid())
  articleId String
  locale    String   // "tr" | "en"
  title     String
  slug      String
  excerpt   String?
  content   String   @db.Text
  
  // SEO fields per locale
  metaTitle       String?
  metaDescription String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  
  @@unique([articleId, locale])
  @@unique([slug, locale])
  @@index([locale])
  @@index([articleId])
}

model ArticleAnalytics {
  id          String   @id @default(cuid())
  articleId   String
  ipAddress   String
  userAgent   String?
  duration    Int      @default(0)
  
  // GeoIP Location Data
  country     String?
  countryCode String?
  region      String?
  city        String?
  latitude    Float?
  longitude   Float?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@index([createdAt])
  @@index([ipAddress])
  @@index([country])
  @@index([city])
}

model AgentLog {
  id              String      @id @default(cuid())
  executionTime   DateTime    @default(now())
  status          AgentStatus
  articlesCreated Int         @default(0)
  articlesScraped Int         @default(0)
  duration        Int?
  errors          String[]
  metadata        Json?
  articles        Article[]

  @@index([executionTime])
  @@index([status])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  encrypted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}

model SocialMedia {
  id        String   @id @default(cuid())
  platform  String   @unique
  url       String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([platform])
}

model Newsletter {
  id             String             @id @default(cuid())
  email          String             @unique
  status         SubscriptionStatus @default(ACTIVE)
  token          String             @unique @default(cuid())
  subscribedAt   DateTime           @default(now())
  unsubscribedAt DateTime?
  lastSentAt     DateTime?
  frequency      EmailFrequency     @default(DAILY)
  categories     String[]
  source         String?
  ipAddress      String?
  userAgent      String?

  @@index([email])
  @@index([status])
  @@index([token])
}

model PushSubscription {
  id           String   @id @default(cuid())
  endpoint     String   @unique
  keys         Json
  userAgent    String?
  ipAddress    String?
  language     String   @default("tr")
  subscribedAt DateTime @default(now())
  lastUsedAt   DateTime @default(now())

  @@index([endpoint])
}

enum Role {
  SUPER_ADMIN // Full access, can manage all users and settings
  ADMIN       // Manage articles, categories, settings (no user management)
  EDITOR      // Create/edit articles, limited settings access
  VIEWER      // Read-only access to dashboard and reports
  MODERATOR   // Manage comments, messages, moderate content
}

enum IndexStatus {
  PENDING
  SUBMITTED
  FAILED
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum AgentStatus {
  RUNNING
  SUCCESS
  FAILED
  PARTIAL
}

enum SubscriptionStatus {
  ACTIVE
  UNSUBSCRIBED
  BOUNCED
  COMPLAINED
}

enum EmailFrequency {
  REALTIME
  DAILY
  WEEKLY
  MONTHLY
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  isRead    Boolean  @default(false)
  isReplied Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isRead])
  @@index([createdAt(sort: Desc)])
}

model Visitor {
  id           String   @id @default(cuid())
  ipAddress    String   @unique
  userAgent    String?
  currentPage  String
  country      String?
  countryCode  String?
  city         String?
  region       String?
  lastActivity DateTime @default(now())
  createdAt    DateTime @default(now())

  @@index([ipAddress])
  @@index([lastActivity])
  @@index([createdAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  action      String
  resource    String
  resourceId  String?
  details     Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt(sort: Desc)])
}

// ArticleTemplate model
model ArticleTemplate {
  id          String    @id @default(cuid())
  name        String
  description String?
  content     String
  category    String?
  isActive    Boolean   @default(true)
  usageCount  Int       @default(0)
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  creator     User      @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  articles    Article[]

  @@index([createdBy])
  @@index([isActive])
}

// SEORecommendation model
model SEORecommendation {
  id         String   @id @default(cuid())
  articleId  String
  type       String
  severity   String
  message    String
  suggestion String?
  isResolved Boolean  @default(false)
  createdAt  DateTime @default(now())

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@index([severity])
  @@index([isResolved])
}

// ArticleDuplicate model
model ArticleDuplicate {
  id              String    @id @default(cuid())
  originalId      String
  duplicateId     String
  similarityScore Float
  status          String    @default("pending")
  mergedAt        DateTime?
  mergedBy        String?
  createdAt       DateTime  @default(now())

  original  Article @relation("OriginalArticle", fields: [originalId], references: [id], onDelete: Cascade)
  duplicate Article @relation("DuplicateArticle", fields: [duplicateId], references: [id], onDelete: Cascade)

  @@index([originalId])
  @@index([duplicateId])
  @@index([status])
}
