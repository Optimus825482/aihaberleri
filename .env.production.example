# Production Environment Variables Template
# IMPORTANT: Copy this file to .env.production and fill in your values
# NEVER commit .env.production with real values to version control!

# Database (Coolify PostgreSQL service)
# Connection pool parameters optimized for long-running operations (agent jobs)
POSTGRES_USER=aiuser
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=ainewsdb
DATABASE_URL=postgresql://aiuser:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/ainewsdb?connection_limit=20&pool_timeout=1200&connect_timeout=30&socket_timeout=1200

# Redis
REDIS_URL=redis://redis:6379

# NextAuth (CRITICAL - Generate with: openssl rand -base64 32)
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_32

# DeepSeek AI
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Search APIs (At least one required)
BRAVE_API_KEY=your_brave_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
EXA_API_KEY=your_exa_api_key_here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=info@yourdomain.com

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME="Your Site Name"
TWITTER_HANDLE=@yourhandle
CONTACT_EMAIL=info@yourdomain.com

# Agent Configuration
AGENT_ENABLED=true
AGENT_MIN_ARTICLES_PER_RUN=3
AGENT_MAX_ARTICLES_PER_RUN=5
AGENT_MIN_INTERVAL_HOURS=6

# Optional - Google AdSense
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX

# App Port (Coolify will handle this)
APP_PORT=3001

# Twitter API (Optional - for social sharing)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
